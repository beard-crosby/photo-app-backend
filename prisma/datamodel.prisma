type Post {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  published: Boolean! @default(value: false)
  title: String!
  image: String!
  thumbnail: String
  author: User!
  caption: String
}

type User {
  id: ID! @id
  email: String! @unique
  password: String!
  name: String!
  posts: [Post!]!
  following: [User]
  comments: [Comment]
  status: String! @default(value: "unverified")
}

type Comment {
  id: ID! @id
  post: Post!
  author: User!
  content: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  published: Boolean! @default(value: false)
}
